<section class="home-section home-sect">
    <div>
        <div class="container mt-5">
            <form action="/staff/editprofile/{{staffDetails._id}}" method="post" enctype="multipart/form-data">
                <div class="row gutters">
                    <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
                        <div class="card h-100">
                            <div class="card-body">
                                <div class="account-settings">
                                    <div class="user-profile">
                                        <div class="user-avatar">
                                            <img id="imgView" src="/images/staff/{{staffDetails._id}}.jpg"
                                                alt="Maxwell Admin">
                                        </div>
                                        <h5 class="user-name">{{staffDetails.Name}}</h5>
                                        <h6 class="user-email">{{staffDetails.Email}}</h6>
                                    </div>
                                    <div class="about">
                                        <h5>Bio</h5>
                                        <p>{{adminDetails.Bio}}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
                        <div class="card h-100">
                            <div class="card-body">
                                <div class="row gutters">
                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                        <h6 class="mb-2 text-primary">Edit Profile</h6>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12 mb-4">
                                        <div class="form-group">
                                            <label for="fullName">Full Name</label>
                                            <input type="text" class="form-control" name="Name"
                                                value="{{staffDetails.Name}}" placeholder="Enter full name">
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group mb-4">
                                            <label for="eMail">Email</label>
                                            <input type="email"  class="form-control" name="Email"
                                                value="{{staffDetails.Email}}" placeholder="Enter email ID">
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group mb-4">
                                            <label for="phone">Phone</label>
                                            <input type="tel" class="form-control" name="Phone"
                                                value="{{staffDetails.Mobile}}" placeholder="Enter phone number">
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                            <label for="phone">Password</label>
                                        <div class="input-group">
                                            <input type="password" name="Password" required class="form-control" value="{{staffDetails.Password}}" id="password" placeholder="Password" aria-label="Password" aria-describedby="eye-icon">
                                            <button class="btn " type="button" id="eye-icon">
                                                <i class="fa fa-eye-slash" aria-hidden="true"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group mb-4">
                                            <label for="image">Select Image</label>
                                            <input type="file" class="form-control" name="Image"
                                                onchange="imageView(event)">
                                        </div>
                                    </div>
                                </div>
                                <div class="row gutters">
                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                        <h6 class="mt-3 mb-4 text-primary">Address</h6>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group mb-4">
                                            <label for="sTate">House No./ Building Name</label>
                                            <input type="text" class="form-control" value="{{staffDetails.House_Name}}" name="House_Name" id="sTate"
                                                placeholder="Enter House No./ Building Name">
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group mb-4">
                                            <label for="Street">Road name/Area</label>
                                            <input type="name" class="form-control" value="{{staffDetails.RoadName}}" name="RoadName" id="Street"
                                                placeholder="Enter Road name / Area">
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group mb-4">
                                            <label for="Street">District</label>
                                            <input type="name" class="form-control" value="{{staffDetails.District}}" name="District" id="Street"
                                                placeholder="Enter District">
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group mb-4">
                                            <label for="ciTy">City</label>
                                            <input type="name" class="form-control" value="{{staffDetails.City}}"name="City" id="ciTy" placeholder="Enter City">
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group mb-4">
                                            <label for="sTate">State</label>
                                            <input type="text" class="form-control" value="{{staffDetails.State}}" name="State" id="sTate"
                                                placeholder="Enter State">
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group mb-4">
                                            <label for="zIp">Zip Code</label>
                                            <input type="text" class="form-control" value="{{staffDetails.ZipCode}}" name="ZipCode" id="zIp" placeholder="Zip Code">
                                        </div>
                                    </div>
                                </div>
                                <div class="row gutters">
                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                        <div class="text-right mt-3">
                                            <button type="submit" class="btn btn-primary">Update</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

<script>
    function imageView(event) {
        document.getElementById('imgView').src = URL.createObjectURL(event.target.files[0])
    }
    const passwordInput = document.getElementById('password');
    const eyeIcon = document.getElementById('eye-icon');

    eyeIcon.addEventListener('click', () => {
        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
            eyeIcon.querySelector('i').classList.remove('fa-eye-slash');
            eyeIcon.querySelector('i').classList.add('fa-eye');
        } else {
            passwordInput.type = 'password';
            eyeIcon.querySelector('i').classList.remove('fa-eye');
            eyeIcon.querySelector('i').classList.add('fa-eye-slash');
        }
    });


</script>