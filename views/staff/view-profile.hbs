<section class="home-section home-sect">
    <div>
        <div class="container mt-5">
            <div class="row gutters">
                <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="account-settings">
                                <div class="user-profile">
                                    <div class="user-avatar">
                                        <img id="imgView" src="/images/staff/{{staffDetails._id}}.jpg"
                                            alt="Maxwell Admin">
                                    </div>
                                    <h5 class="user-name">{{staffDetails.Name}}</h5>
                                    <h6 class="user-email">{{staffDetails.Email}}</h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="row gutters">
                                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                    <h6 class="mb-2 text-primary">Profile</h6>
                                </div>
                                <div class="row mt-4">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Full Name</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        {{staffDetails.Name}}
                                    </div>
                                </div>
                                <hr>
                                <div class="row mt-2">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Email</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        {{staffDetails.Email}}
                                    </div>
                                </div>
                                <hr>
                                <div class="row mt-2">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Phone</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        {{staffDetails.Mobile}}
                                    </div>
                                </div>
                                <hr>
                                <div class="row mt-2">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Address</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        {{staffDetails.House_Name}},{{staffDetails.RoadName}},{{staffDetails.City}} <br>
                                        {{staffDetails.District}} (Dist), <br>
                                        {{staffDetails.State}} - {{staffDetails.ZipCode}} Ph : {{staffDetails.Mobile}}
                                    </div>
                                </div>
                                <hr>

                                <div class="row gutters">
                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                        <div class="text-right mt-3">
                                            <a href="/staff/editprofile/{{staffDetails._id}}" class="btn btn-primary">Update</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>