<section class="px-4">
    <div class="text-center mt-5">
        <h3>View Attendance</h3>
    </div>
    <div class="row">
        {{#each std}}
        <div class="text-center col-md-6">
            <h3>{{this.Name}}</h3>
            <table class="table table-hover text-center table-bordered" style="border: 2px solid #080808 !important;">
                <thead>
                    <tr>
                        <th scope="col">Date</th>
                        <th scope="col">Status</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each this.Attendance}}
                    <tr>
                        <th scope="row">{{dateFormat this.Date}}</th>
                        <td>{{this.Attendance}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        {{/each}}
    </div>
</section>