<section class="home-section">
    <div class="m-3 mt-5">
        <div class="row d-flex justify-content-center">
            <div>
                <h4 class="text-center mt-5">{{staff.Department}} {{staff.Year}} Year Students</h4>
            </div>
            <div class="col-md-12 mt-5 ">
                <table id="example" class="table table-hover display text-center table-bordered"style="border: 2px solid #080808 !important;">
                    <thead class="text-white bg-slate-600">
                        <tr>
                            <th class="text-center" scope="col">Sno</th>
                            <th class="text-center" scope="col">Name</th>
                            <th class="text-center" scope="col">Reg No.</th>
                            <th class="text-center" scope="col">Phone No.</th>
                            <th class="text-center" scope="col">Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each students}}
                        <tr>
                            <th scope="row">{{inc @index}}</th>
                            <td>{{this.Name}}</td>
                            <td>{{this.RegisterNo}}</td>
                            <td>{{this.Mobile}}</td>
                            <td>{{this.Email}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>



<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>