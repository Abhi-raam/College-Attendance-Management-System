<section class="home-section home-sect">
    <div id="wrapper">
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <div class="container-fluid" id="container-wrapper">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card mb-4">
                                <div
                                    class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                    <h6 class="m-0 font-weight-bold text-primary">View Attendance %</h6>
                                </div>
                                <div class="row">
                                    <div class="card-body col-md-6">
                                        <form method="post" action="/student/viewAttendancePersent">
                                            <div class="form-group row mb-3">
                                                <div class="col-md-6">
                                                    <label class="form-control-label">Student name : {{student.Name}}</label> 
                                                </div>
                                            </div>
                                            <button type="submit" class="btn btn-primary">View Attendance</button>
                                        </form>
                                    </div>

                                </div>
                            </div>

                            
                            <!-- Input Group -->
                            {{#if submitted}}
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="card mb-4">
                                        <div
                                            class="card-header py-3 d-flex flex-row align-items-center justify-content-between">

                                            <h6 class="m-0 font-weight-bold text-primary">Attendance persentage
                                            </h6>
                                        </div>
                                        <div class="mt-3 mx-3">
                                            <h5>Attendance details of : {{Name}}</h5>
                                            <h5>Total number of working days : {{workingDay}} </h5>
                                            <h5>Total number of days precent : {{presentDay}} </h5>
                                            <div class=" d-flex">
                                                <h5>Attendance precentage % : </h5>
                                                <h5
                                                    class="{{#gt round 80}}mx-1 px-2 rounded bg-success text-white{{else}}mx-1 px-2 rounded bg-danger text-white{{/gt}}">
                                                    {{round}} %</h5>
                                            </div>
                                        </div>
                                        <div class="mb-4 doughnut_chart">
                                            <canvas id="myChart"></canvas>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{/if}}
                        </div>

</section>
<script>
    const ctx = document.getElementById('myChart');
    new Chart(ctx, {
        type: 'pie',
        data: {
            labels: ['Precent', 'Absent'],
            datasets: [{
                label: 'Attendance',
                data: [{{ presentDay }}, {{ absent }}],
        //borderWidth: 1
        backgroundColor: ['#15803d', '#dc2626'],
    }]
    },
        options: {
        scales: {
            y: {
                beginAtZero: true
            }
        }
    }
  });
</script>