<section class="home-section home-sect">
    <div>
        <div class="container mt-5">
            <div class="row gutters">
                <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="account-settings">
                                <div class="user-profile">
                                    <div class="user-avatar">
                                        <img id="imgView" src="/images/admin/{{adminDetails._id}}.jpg"
                                            alt="Maxwell Admin">
                                    </div>
                                    <h5 class="user-name">{{adminDetails.Name}}</h5>
                                    <h6 class="user-email">{{adminDetails.Email}}</h6>
                                </div>
                                <div class="about">
                                    <h5>Bio</h5>
                                    <p>{{adminDetails.Bio}}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="row gutters">
                                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                    <h6 class="mb-2 text-primary">Profile</h6>
                                </div>
                                <div class="row mt-4">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Full Name</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        {{adminDetails.Name}}
                                    </div>
                                </div>
                                <hr>
                                <div class="row mt-2">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Email</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        {{adminDetails.Email}}
                                    </div>
                                </div>
                                <hr>
                                <div class="row mt-2">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Phone</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        {{adminDetails.Phone}}
                                    </div>
                                </div>
                                <hr>
                                <div class="row mt-2">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Bio</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        {{adminDetails.Bio}}
                                    </div>
                                </div>
                                <hr>

                                <div class="row gutters">
                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                        <div class="text-right mt-3">
                                            <a href="/admin/edit-profile/{{adminDetails._id}}" class="btn btn-primary">Update</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>