<section class="home-section ">
    <div class="container">
        <div class="row pt-5">
                <h3 class="text-center">MECH</h3>
            <div class="col-md-12 mt-4 ">
                <div>
                    <table id="tblCustomers" class="table table-hover table-bordered" style="border: 2px solid #080808 !important;">
                        <thead>
                            <tr>
                                <th scope="col">Sno.</th>
                                <th scope="col">Image</th>
                                <th scope="col">Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Phone</th>
                                <th scope="col">Designation</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each staff}}
                            {{#ifEquals Department "MECH"}}
                            <tr>
                                <th scope="row">{{inc @index}}</th>
                                <td><img src="../images/staff/{{this._id}}.jpg" alt="logo"></td>
                                <td>{{this.Name}}</td>
                                <td>{{this.Email}}</td>
                                <td>{{this.Mobile}}</td>
                                <td>{{this.Designation}}</td>
                            </tr>
                            {{/ifEquals}}
                            {{/each}}
                        </tbody>
                    </table>
                    <button id="btnExport" class="justify-content-end d-flex m-2 btn btn-success">print</button>
                </div>
            </div>
        </div>
    </div>
</section>