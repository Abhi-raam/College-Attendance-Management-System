<section class="">
    <div class="container shadowBorder">
        <div class="row d-flex justify-content-center">
            <div class="col-md-6">
                <h2 class="text-center">Add Teachers</h2>
                <form action="/admin/edit-staff/{{staff._id}}" method="post" enctype="multipart/form-data">
                    <label for="">Name</label>
                    <input type="text" name="Name" class="form-control" value="{{staff.Name}}">

                    {{!-- <label for="">Email</label>
                    <input type="email" name="Email" class="form-control"> --}}
                    <div class="d-flex">
                        <div class="col-md-6 pe-3">
                            <label for="">Email</label>
                            <input type="email" name="Email" class="form-control" value="{{staff.Email}}">
                        </div>
                        <div class="col-md-6">
                            <label for="">Mobile</label>
                            <input type="tel" name="Mobile" class="form-control" value="{{staff.Mobile}}">
                        </div>


                    </div>
                    <label for="">Password</label>
                    <input type="password" name="Password" class="form-control">

                    <div class="d-flex">
                        <div class="col-md-6 pe-3">
                            <label for="">Department</label>
                            <select class="form-control" name="Department" id="exampleFormControlSelect1">
                                <option>CSE</option>
                                <option>ECE</option>
                                <option>MECH</option>
                                <option>CIVIL</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="">Year</label>
                            <select class="form-control" name="Year" id="exampleFormControlSelect1">
                                <option></option>
                                <option>First</option>
                                <option>Second</option>
                                <option>Third</option>
                                <option>Fourth</option>
                            </select>
                        </div>
                    </div>
                    <label for="">Designation</label>
                            <select class="form-control" name="Designation" id="exampleFormControlSelect1">
                                <option>Hod</option>
                                <option>Assistant Professor</option>
                                <option>Associate Professor</option>
                            </select>

                    <label class="mt-3" for="">Image</label>
                    <img src="/images/staff/{{staff._id}}.jpg" alt="" id="imgView" style="width: 150px;height:auto;" class="mt-3">
                    <input type="file" name="Image" class="form-control mt-4" onchange="imageView(event)">

                    <button type="submit" class="btn btn-success mt-4">Submit</button>
                </form>
            </div>
        </div>
    </div>
</section>
<script>
    function imageView(event) {
        document.getElementById('imgView').src = URL.createObjectURL(event.target.files[0])
    }
</script>