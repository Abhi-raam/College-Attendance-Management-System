<section class="home-section">
    <div class="container shadowBorder">
        <div class="row d-flex justify-content-center">
            <div class="col-md-6">
                <h2 class="text-center">Add Mech Students</h2>
                <form action="/admin/add-mech-student" method="post" enctype="multipart/form-data">
                    <label for="">Name</label>
                    <input type="text" name="Name" class="form-control">
                    <div class="d-flex">
                        <div class="col-md-6 pe-3">
                            <label for="">Register No.</label>
                            <input type="text" name="RegisterNo" class="form-control">
                        </div>
                        <div class="col-md-6">
                            <label for="">DOB</label>
                            <input type="date" name="DOB" class="form-control">
                        </div>
                    </div>
                    <input type="text" name="Department" hidden value="MECH">
                    <label for="">Year</label>
                    <select class="form-control" name="Year" id="exampleFormControlSelect1">
                        <option>First</option>
                        <option>Second</option>
                        <option>Third</option>
                        <option>Fourth</option>
                    </select>
                    <div class="d-flex">
                        <div class="col-md-6 pe-3">
                            <label for="">Email</label>
                            <input type="email" name="Email" class="form-control">
                        </div>
                        <div class="col-md-6">
                            <label for="">Mobile</label>
                            <input type="tel" name="Mobile" class="form-control">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success mt-4">Submit</button>
                </form>
            </div>
        </div>
    </div>
</section>