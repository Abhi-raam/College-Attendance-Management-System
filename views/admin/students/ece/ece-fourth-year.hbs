<section class="home-section">
    <div class="mx-2 mt-5">
        <div class="row d-flex justify-content-center">
            <div>
                <h4 class="text-center mt-5" id="page-title">ECE Fourth year</h4>
            </div>
            <div class="col-md-12 mt-5 ">
                <table id="stdDetails" class="table table-hover text-center table-bordered"
                    style="border: 2px solid #080808 !important;">
                    <thead class="text-white bg-slate-600">
                        <tr>
                            <th scope="col">Sno</th>
                            <th scope="col">Name</th>
                            <th scope="col">Date of Birth</th>
                            <th scope="col">Reg No.</th>
                            <th scope="col">Phone No.</th>
                            <th scope="col">Email</th>
                            <th scope="col">Edit</th>
                            <th scope="col">Delete</th>

                        </tr>
                    </thead>
                    <tbody>
                        {{#each eceStudents}}
                        {{#ifEquals Year "Fourth"}}
                        <tr>
                            <th scope="row">{{inc @index}}</th>
                            <td>{{this.Name}}</td>
                            <td>{{dateFormat this.DOB}}</td>
                            <td>{{this.RegisterNo}}</td>
                            <td>{{this.Mobile}}</td>
                            <td>{{this.Email}}</td>
                            <td><a href="/admin/edit-ece-student/{{this._id}}" class="btn btn-primary">Edit</a></td>
                            <td><a href="/admin/delete-ece-student/{{this._id}}/{{this.Year}}" class="btn btn-danger"
                                    onclick="return confirm('Do you want to delete {{this.Name}}?')">Delete</a></td>
                        </tr>
                        {{/ifEquals}}
                        {{/each}}
                    </tbody>
                </table>
                <div class="d-flex justify-content-between mt-3">
                    <a id="btnExport" class="justify-content-end d-flex  btn btn-success"
                        onclick="generatePdfStd()">Print</a>
                    <a target="_blank" href="/admin/add-ece-student" class="btn btn-primary">Add Students</a>
                </div>
            </div>
        </div>
    </div>
</section>