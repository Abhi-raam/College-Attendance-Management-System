<section>
    <div class="container">
        <div class="row">
            <div class="col-md-12 mt-5">
                <div class="text-center">
                    <h3>CIVIL</h3>
                </div>
                <div>
                    <table id="tblCustomers" class="table table-hover table-bordered"
                        style="border: 2px solid #080808 !important;">
                        <thead>
                            <tr>
                                <th scope="col">Sno.</th>
                                <th scope="col">Image</th>
                                <th scope="col">Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Phone</th>
                                <th scope="col">Staff Incharge</th>
                                <th scope="col">Designation</th>
                                <th scope="col">Edit/Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each staff}}
                            {{#ifEquals Department "CIVIL"}}
                            <tr>
                                <th scope="row">{{inc @index}}</th>
                                <td><img src="../images/staff/{{this._id}}.jpg" alt="logo"></td>
                                <td>{{this.Name}}</td>
                                <td>{{this.Email}}</td>
                                <td>{{this.Mobile}}</td>
                                <td>{{this.Year}}</td>
                                <td>{{this.Designation}}</td>
                                <td class=" text-center ">
                                    <a href="/admin/edit-staff/{{this._id}}" class="btn btn-primary mt-3 me-3">Edit</a>
                                    <a href="/admin/delete-staff/{{this._id}}/{{this.Department}}"
                                        class="btn btn-danger mt-3"
                                        onclick="return confirm('Do you want to delete {{this.Name}}?')">Delete</a>

                                </td>
                            </tr>
                            {{/ifEquals}}
                            {{/each}}
                        </tbody>
                    </table>
                    <div class="d-flex justify-content-between">
                        <a class="btn btn-primary" href="/admin/civil-staff-details">View Details</a>
                        <a class="btn btn-primary" target="_blank" href="/admin/add-teachers">Add Staff</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>